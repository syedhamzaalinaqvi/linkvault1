{
  "version": 2,
  "buildCommand": "node build.js",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/groups/([^/]+)/view",
      "destination": "/api/groups/[id]/view.ts"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.ts"
    },
    {
      "source": "/((?!api/.*).*)",
      "destination": "/index.html"
    }
  ]
}